{
  "title"    : "{{ post.title }}",
  "categories" : [{% for category in post.categories %}"{{ category}}",{% endfor %} null],
  "tags"     : [{% for tag in post.tags %}"{{ tag }}",{% endfor %} null],
  "href"     : "{{ post.url }}",
  "content"  :  "{{ post.content | cgi_escape }}",
  "date"     : {
    "day"   : "{{ post.date | date: "%d" }}",
    "month" : "{{ post.date | date: "%m" }}",
    "year"  : "{{ post.date | date: "%Y" }}"
  }
}
